# Rename to .env and fill your secrets

# =============================
# App / Versioning
# =============================
APP_VERSION=0.4.0
PORT=8000

# =============================
# API security & CORS
# =============================
# Сгенерируй ключ: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=CHANGE_ME
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================
# Rate limiting
# =============================
RATE_LIMIT_ENABLED=1
RATE_LIMIT_PUBLIC=100/hour
RATE_LIMIT_PROTECTED=1000/hour
RATE_LIMIT_STORAGE_URL=memory://

# =============================
# Logging
# =============================
LOG_LEVEL=INFO

# =============================
# Timezone
# =============================
TZ=Europe/Moscow

# =============================
# Database
# =============================
DB_HOST=db
DB_PORT=5432
DB_NAME=wine_db
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# Необязательно: для удобного psql
PGHOST=db
PGPORT=5432
PGDATABASE=wine_db
PGUSER=postgres
PGPASSWORD=CHANGE_ME

# Только для первого старта нового тома:
POSTGRES_DB=wine_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME

# =============================
# Gunicorn
# =============================
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
