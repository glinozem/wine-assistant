# Rename to .env and fill your secrets

# Database
PGHOST=127.0.0.1
PGPORT=15432
PGUSER=postgres
PGPASSWORD=dev_local_pw
PGDATABASE=wine_db

# API settings
API_KEY=mytestkey_минимум_32_символа_для_безопасности
FLASK_HOST=127.0.0.1
FLASK_PORT=18000
FLASK_DEBUG=1

# Версия API (для healthcheck)
APP_VERSION=0.3.0

# CORS (для фронтенда)
CORS_ORIGINS=*

# Logging (Structured JSON logging)
# Уровни: DEBUG (детально) | INFO (стандарт) | WARNING (предупреждения) | ERROR (только ошибки)
# DEBUG - для разработки, INFO - для production
LOG_LEVEL=INFO

# Docker (для docker-compose.yml)
POSTGRES_PASSWORD=dev_local_pw
DB_PORT=15432
ADMINER_PORT=18080

# Rate Limiting
RATE_LIMIT_ENABLED=1
RATE_LIMIT_PUBLIC=100/hour
RATE_LIMIT_PROTECTED=1000/hour
# RATE_LIMIT_STORAGE_URL=redis://localhost:6379  # For production with Redis
