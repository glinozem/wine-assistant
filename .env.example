# Rename to .env and fill your secrets

# Database connection (внутри Docker-сети для migrate.ps1)
PGHOST=db
PGPORT=5432
PGUSER=postgres
PGPASSWORD=dev_local_pw
PGDATABASE=wine_db

# Для подключения с хоста (из Python/Adminer на вашем ПК)
# Раскомментируйте и используйте эти значения в .env:
# PGHOST=127.0.0.1
# PGPORT=15432

# Timezone
TZ=Europe/Helsinki

# API settings
API_KEY=CHANGE_ME_минимум_32_символа_для_безопасности
FLASK_HOST=127.0.0.1
FLASK_PORT=18000
FLASK_DEBUG=1

# CORS (Cross-Origin Resource Sharing)
# Для разработки: * (разрешить все)
# Для production: список доменов через запятую
CORS_ORIGINS=*
# Пример для production:
# CORS_ORIGINS=https://myapp.com,https://www.myapp.com,http://localhost:3000

# Docker (для docker-compose.yml)
POSTGRES_PASSWORD=dev_local_pw
DB_PORT=15432
ADMINER_PORT=18080
